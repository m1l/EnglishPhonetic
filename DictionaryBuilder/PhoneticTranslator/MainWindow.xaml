<Window x:Class="PhoneticTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneticTranslator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <TextBlock Text="Paste English text here and press Convert"
                   HorizontalAlignment="Stretch" 
                   DockPanel.Dock="Top"/>
        <Button x:Name="convertButton"
                DockPanel.Dock="Bottom"
                Content="Convert"
                HorizontalAlignment="Center" Click="convertButton_Click"/>
        <TextBox x:Name="textBox" 
                 TextWrapping="Wrap"
                 Margin="0,10,0,10"  
                 AcceptsReturn="True"
                 />

    </DockPanel>
</Window>
